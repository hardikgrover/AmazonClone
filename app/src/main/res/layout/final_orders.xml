<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userName"
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/final_user_name"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"

            android:text="user Phone Number"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/final_user_phone"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"></TextView>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"

            android:text="Address"
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:id="@+id/final_user_address"
            android:layout_below="@+id/final_user_name"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"></TextView>
        <TextView
            android:id="@+id/final_user_date"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimaryDark"

            android:layout_height="wrap_content"
            android:text="Date time"
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/final_user_address"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"></TextView>
        <TextView
            android:id="@+id/final_user_price"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimaryDark"

            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/final_user_date"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"></TextView>
            <Button
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:id="@+id/final_user_button"
                android:textSize="14dp"
                android:text="Show this order Products"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/final_user_price"></Button>
    </RelativeLayout>

</RelativeLayout>