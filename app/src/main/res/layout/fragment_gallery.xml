<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

   <com.google.android.material.appbar.AppBarLayout
       android:id="@+id/app_bar_settings"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@color/colorPrimary">
       <androidx.appcompat.widget.Toolbar
           android:id="@+id/toolbar_settings"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/close_settings"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Close"
                  android:textSize="17sp"
                  android:textStyle="bold"
                    android:layout_alignParentStart="true"
                  android:textColor = "@android:color/white"></TextView>
              <TextView
                  android:id="@+id/update_account_settings"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Update"
                  android:textSize="17sp"
                  android:textStyle="bold"
                  android:layout_alignParentEnd="true"
                  android:layout_marginRight="10dp"
                  android:textColor = "@android:color/white"></TextView>

          </RelativeLayout>

       </androidx.appcompat.widget.Toolbar>
   </com.google.android.material.appbar.AppBarLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/settings_profile_image"
        android:layout_below="@+id/app_bar_settings"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"></de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/profile_img_chng_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Profile"

        android:textSize="17sp"

        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/settings_profile_image"
        android:layout_centerHorizontal="true"
        android:textColor = "@android:color/black"></TextView>
    <EditText
        android:layout_below="@+id/profile_img_chng_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_phone_number"
        android:hint="phone number"
        android:layout_margin="15dp"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_name"
        android:layout_below="@+id/settings_phone_number"
        android:hint="phone number"
        android:layout_margin="15dp"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_adddress"
        android:layout_below="@+id/settings_name"
        android:hint="address"
        android:layout_margin="15dp"></EditText>
</RelativeLayout>









