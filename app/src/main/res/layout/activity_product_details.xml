<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetails">
    <ImageView
        android:id="@+id/product_image_des"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"></ImageView>
    <TextView
        android:id="@+id/product_name_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="product name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/product_image_des"
        android:gravity="center"
        android:layout_marginTop="10dp"></TextView>
        <TextView
            android:id="@+id/product_description_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="product description"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/product_name_description"
            android:gravity="center"
            android:layout_marginTop="10dp"></TextView>
    <TextView
        android:id="@+id/product_price_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="product price"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/product_description_description"
        android:gravity="center"
        android:layout_marginTop="10dp"></TextView>
    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/add_product_no"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:elevation="6dp"
        app:initialNumber="1"
        app:finalNumber="10"
        app:textSize="16dp"
        android:gravity="center"
        android:layout_below="@+id/product_price_description"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"

        >



    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
    <com.rey.material.widget.FloatingActionButton
        android:id="@+id/add_product_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:backgroundTint="@android:color/white"
        app:fab_iconSrc="@drawable/nav_cart"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"></com.rey.material.widget.FloatingActionButton>


</RelativeLayout>














































